{
  "name": "FocusSuite Codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspaces/focussuite",
  "remoteUser": "codespace",

  // Kod tabanının tüm bölümleri için (mobile, website, nexus-core) ortak araçları hazırlarız.
  "postCreateCommand": "bash .devcontainer/postCreate.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "msjsdiag.vscode-react-native",
        "dsznajder.es7-react-js-snippets",
        "eg2.vscode-npm-script",
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "files.eol": "\n",
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "forwardPorts": [19000, 19001, 19002, 3000, 8000],
  "portsAttributes": {
    "19000": {
      "label": "Expo Dev Server",
      "onAutoForward": "openBrowser"
    },
    "19001": {
      "label": "Metro Bundler WebSocket"
    },
    "19002": {
      "label": "Expo LAN"
    },
    "3000": {
      "label": "Next.js",
      "onAutoForward": "openBrowser"
    },
    "8000": {
      "label": "Rust Backend"
    }
  }
}
