{
  "name": "Expo React Native (mobile)",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "workspaceFolder": "/workspaces/foucussuite/mobile",

  "features": {
    "ghcr.io/devcontainers-contrib/features/pnpm:2": {
      "version": "latest"
    }
  },

  // Sadece "pnpm install" komutunu b覺rak覺yoruz. 
  // Gereksiz ve eski olan "expo-cli" kurulumunu kald覺rd覺k.
  "postCreateCommand": "pnpm install",

  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "msjsdiag.vscode-react-native",
        "dsznajder.es7-react-js-snippets",
        "gamunu.vscode-yarn",
        "eg2.vscode-npm-script"
      ]
    }
  },

  "forwardPorts": [19000, 19001, 19002],
  "portsAttributes": {
    "19000": {
      "label": "Expo Dev Server",
      "onAutoForward": "openBrowser"
    },
    "19001": {
      "label": "Metro Bundler WebSocket"
    },
    "19002": {
      "label": "Expo LAN"
    }
  }
}
